<div class="text-center">
  <h1>All restaurants</h1>
  <%= link_to("Add a new restaurant" , new_restaurant_path, method: :get) %>
</div>

<ul>
<hr>
<% @restaurants.each do |restaurant| %>
  <li class="list-unstyled">
    <h4><%= restaurant.name %></h4>
    <p><%= restaurant.address %></p>
    <p>Phone number: <%= restaurant.phone_number %></p>
    <%= link_to("See details" , restaurant_path(restaurant), method: :get) %> |
    <%= link_to("Add a review" , new_restaurant_review_path(restaurant), method: :get) %> |
    <%= link_to("Delete" , restaurant_path(restaurant), method: :delete) %>
    <hr>
  </li>
<% end %>
</ul>
