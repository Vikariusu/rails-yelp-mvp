<div class="container">
  <div class="row">
    <div class="col-md-offset-4 col-md-4 col-md-offset-4 ">

    <%= form_for [@restaurant, @review], :html => {:class => "form-horizontal center"} do |f| %>
      <%= f.label :content %>
      <%= f.text_field :content %>

      <%= f.label :rating %>
      <%= f.text_field :rating %>

      <%= f.submit class: "btn btn-primary"%>
    <% end %>

    </div>
  </div>
</div>
