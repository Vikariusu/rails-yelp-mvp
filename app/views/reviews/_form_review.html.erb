
  <div class="container">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
      <!-- <div class="col-lg-4 col-lg-offset-4"> -->

      <%= form_for [@restaurant, @review], :html => {:class => 'center'} do |f| %>
        <div class="form-group">
          <p> <%= f.label :content %> </p>
          <%= f.text_field :content, :html => {:class => 'form-control'}%>
        </div>

        <div class="form-group">
          <p> <%= f.label :rating %> </p>
          <%= f.text_field :rating, :html => {:class => 'form-control'} %>
        </div>

        <%= f.submit class: "btn btn-primary"%>
      <% end %>

      </div>
    </div>
  </div>

